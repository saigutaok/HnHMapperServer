@rendermode InteractiveServer
@using HnHMapperServer.Web.Models
@inject IHttpClientFactory HttpClientFactory
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        <MudStack Spacing="3">
            <MudTextField @bind-Value="username" Label="Username" Disabled="true" />
            <MudTextField @bind-Value="newPassword" Label="New Password" InputType="InputType.Password" Required="true" />
            <MudTextField @bind-Value="confirmPassword" Label="Confirm Password" InputType="InputType.Password" Required="true" />
        </MudStack>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Warning" Variant="Variant.Filled" OnClick="ChangePassword" Disabled="@isChanging">
            @if (isChanging)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" />
                <span class="ms-2">Changing...</span>
            }
            else
            {
                <span>Change Password</span>
            }
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public string Username { get; set; } = string.Empty;
    [Parameter] public string? UserId { get; set; }
    [Parameter] public EventCallback OnPasswordChanged { get; set; }
    [Parameter] public bool IsSuperAdmin { get; set; } = false;
    [Parameter] public string? SuperAdminTenantId { get; set; }

    private string username = string.Empty;
    private string newPassword = string.Empty;
    private string confirmPassword = string.Empty;
    private bool isChanging = false;

    protected override void OnInitialized()
    {
        username = Username;
    }

    private async Task ChangePassword()
    {
        if (string.IsNullOrWhiteSpace(newPassword))
        {
            Snackbar.Add("Password is required", Severity.Warning);
            return;
        }

        if (newPassword != confirmPassword)
        {
            Snackbar.Add("Passwords do not match", Severity.Warning);
            return;
        }

        if (newPassword.Length < 6)
        {
            Snackbar.Add("Password must be at least 6 characters", Severity.Warning);
            return;
        }

        isChanging = true;
        try
        {
            var httpClient = HttpClientFactory.CreateClient("API");

            if (IsSuperAdmin)
            {
                // SuperAdmin endpoint - uses JSON request body
                if (string.IsNullOrEmpty(SuperAdminTenantId) || string.IsNullOrEmpty(UserId))
                {
                    Snackbar.Add("Invalid tenant or user ID", Severity.Error);
                    return;
                }

                var request = new { password = newPassword };
                var response = await httpClient.PostAsJsonAsync(
                    $"/api/superadmin/tenants/{SuperAdminTenantId}/users/{UserId}/password",
                    request);

                if (response.IsSuccessStatusCode)
                {
                    Snackbar.Add($"Password for '{username}' reset successfully", Severity.Success);
                    await OnPasswordChanged.InvokeAsync();
                    MudDialog.Close();
                }
                else
                {
                    Snackbar.Add($"Failed to reset password for '{username}'", Severity.Error);
                }
            }
            else
            {
                // TenantAdmin endpoint - uses form-encoded content
                var content = new FormUrlEncodedContent(new[]
                {
                    new KeyValuePair<string, string>("newPassword", newPassword)
                });

                var response = await httpClient.PostAsync($"/admin/users/{username}/password", content);

                if (response.IsSuccessStatusCode)
                {
                    Snackbar.Add($"Password for '{username}' changed successfully", Severity.Success);
                    await OnPasswordChanged.InvokeAsync();
                    MudDialog.Close();
                }
                else
                {
                    Snackbar.Add($"Failed to change password for '{username}'", Severity.Error);
                }
            }
        }
        finally
        {
            isChanging = false;
        }
    }

    private void Cancel()
    {
        MudDialog.Cancel();
    }
}
