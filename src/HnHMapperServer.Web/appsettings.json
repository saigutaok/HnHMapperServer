{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.AspNetCore": "Warning",
        "Microsoft.AspNetCore.Hosting": "Warning",
        "Microsoft.AspNetCore.Routing": "Warning",
        "Serilog.AspNetCore.RequestLoggingMiddleware": "Warning",
        "System": "Warning",
        "Microsoft.EntityFrameworkCore": "Fatal",
        "Microsoft.EntityFrameworkCore.Database.Command": "Fatal",
        "Microsoft.EntityFrameworkCore.Infrastructure": "Fatal",
        "HnHMapperServer.Web.Services.AuthenticationDelegatingHandler": "Warning",
        "HnHMapperServer.Web.Security.ReconnectionCircuitHandler": "Information",
        "HnHMapperServer.Web.Services.CircuitServicesAccessor": "Warning",
        "Polly": "Warning",
        "HnHMapperServer.Web.Components.Pages.Map": "Debug",
        "HnHMapperServer.Web.Components.Map.MapView": "Debug",
        "Microsoft.AspNetCore.SignalR": "Debug",
        "Microsoft.AspNetCore.Http.Connections": "Debug"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/web-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7,
          "outputTemplate": "[{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {Level:u3}] {SourceContext}: {Message:lj}{NewLine}{Exception}"
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "AllowedHosts": "*",
  "ReturnTransparentTilesOnMissing": false
}
